<UserControl x:Class="Library.View.EventListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Library.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <ListView ItemsSource="{Binding Path=Events}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Path=event_id}" Width="50"/>
                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Path=event_time}" Width="80"/>
                    <GridViewColumn Header="Is it Borrowing Event?" DisplayMemberBinding="{Binding Path=is_borrowing_event}" Width="130"/>
                    <GridViewColumn Header="Book" DisplayMemberBinding="{Binding Path=book}" Width="Auto"/>
                </GridView>
            </ListView.View>
        </ListView>
    </StackPanel>
</UserControl>
